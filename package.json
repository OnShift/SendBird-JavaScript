{
  "name": "onshift-chat-widget",
  "version": "0.5.1",
  "description": "A chat widget based on and utilizing SendBird.",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run prod-build",
    "prod-build": "npm run build-stylesheet && webpack -p --config webpack.prod.js",
    "start-dev": "npm run build-stylesheet && webpack-dev-server --config webpack.dev.js",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint src/",
    "build-stylesheet": "node-sass src/scss/widget.scss build/stylesheet.css",
    "watch-stylesheet": "node-sass -w src/scss/widget.scss build/stylesheet.css"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "verbose": true,
    "moduleNameMapper": {
      ".css": "<rootDir>/__test__/__mocks__/styleMock.js"
    }
  },
  "author": "OnShift",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-env": "^1.2.2",
    "babel-preset-es2015": "^6.24.0",
    "css-loader": "^0.27.3",
    "eslint": "^3.18.0",
    "eslint-loader": "^1.6.3",
    "express": "^4.16.2",
    "jest": "^22.4.2",
    "node-sass": "4.5.0",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.14.1",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "sendbird": "^3.0.53"
  }
}
